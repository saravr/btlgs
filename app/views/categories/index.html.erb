<div data-role="header">
  <h1>Categories</h1>
  <%= link_to 'Add', new_category_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>

<div data-role="content">
  <ul data-role="listview">
    <% @categories.each do |category| %>
      <% if category.parent.nil? %>
      <li>
        <%= link_to category.name, category %>
        <%= link_to 'edit category', edit_category_path(category), "data-icon" => "gear" %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>

